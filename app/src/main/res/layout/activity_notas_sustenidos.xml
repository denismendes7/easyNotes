<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sphereback"
    tools:context="com.example.jdjl.e_notes.NotasSustenidosActivity">

    <TextView
        android:id="@+id/txtNomeNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:text="Nota Selecionada"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgNotas"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/txtNomeNota"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/emptynota" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imgNotas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/but"
                android:text="Dó(C)"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRe"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/but"
                android:text="Ré(D)"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFa"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/but"
                android:text="Fá(F)"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSol"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/but"
                android:text="Sol(G)"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLa"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/but"
                android:text="Lá(A)"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
